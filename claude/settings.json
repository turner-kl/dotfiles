{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "echo \"[$(basename $(git rev-parse --show-toplevel 2>/dev/null) 2>/dev/null):$(git branch --show-current 2>/dev/null)] $(npx ccusage statusline 2>/dev/null || echo '')\""
  },
  "alwaysThinkingEnabled": true,
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)"
    ]
  },
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": false,
    "excludedCommands": ["git"]
  }
}
